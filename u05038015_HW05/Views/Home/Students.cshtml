@model u05038015_HW05.Models.Student
@using u05038015_HW05.Models


<h2>Students</h2>

<div class="container">
    @{
        List<SelectListItem> classesList = new List<SelectListItem>();

        classesList.Add(new SelectListItem
        {
            Text = "Select a class",
            Value = null,
            Selected = true
        });

    }
    <div class="my-md-0">
        @using (Html.BeginForm("FuzzySearch", "Home", FormMethod.Post, new { style = "width:100%; display:inline" }))
        {
            <input type="text" style="width:30%;max-width:none; display:inline" name="searchText" class="form-control" placeholder="Search student Name" />

        }

        @Html.DropDownList("classes", new SelectList(classesList, "Value", "Text"), new { @class = "form-control", style = "width:15%; display:inline; margin-left:10px;" })


        @using (Html.BeginForm("FuzzySearch", "Home", FormMethod.Post, new { style = "width:100%; display:inline" }))
        {
            <input type="submit" style="width:20%;max-width:none; display:inline" name="searchText" class=" btn btn-success" value="Search" />
        }
        @Html.ActionLink("Clear", "Index", "Home", htmlAttributes: new { @class = "btn btn-danger", style = "display:inline; margin-left:10px; position:relative; bottom:3px; padding-left:50px; padding-right:50px;" })
    </div>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Class</th>
                <th scope="col">Points</th>
                <th scope="col">Borrow Book</th>

            </tr>
        </thead>
        <tbody>
            @foreach (Student students in Models.Student)
            {
                <tr>

                    <td>@students.StudID</td>
                    <td>@students.Name</td>
                    <td>@students.Surname</td>
                    <td>@students.Class</td>
                    <td>@students.Point</td>
                    <td>
                        @Html.ActionLink("Borrow Book", "Students", "Home", htmlAttributes: new { @class = "btn btn-primary" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
